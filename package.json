{
  "name": "kang-kang-ai",
  "version": "1.0.0",
  "description": "Chinese Vietnamese AI Translator",
  "author": "Kang Kang",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "electron": "^30.5.1",
    "groq-sdk": "^0.5.0",
    "pinyin": "^3.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.kangkang.ai",
    "productName": "Kang Kang AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null
  }
}
